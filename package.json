{
	"name": "ovr-monorepo",
	"private": true,
	"version": "0.0.0",
	"license": "MIT",
	"packageManager": "npm@11.7.0",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/ovrjs/ovr.git"
	},
	"type": "module",
	"workspaces": [
		"apps/*",
		"packages/*"
	],
	"scripts": {
		"dev": "turbo dev",
		"check": "turbo check",
		"test": "vitest run",
		"test:dev": "vitest",
		"bench": "NODE_OPTIONS='--expose-gc' vitest bench",
		"build": "turbo build",
		"format": "prettier --write .",
		"changeset": "changeset",
		"version": "changeset version",
		"release": "npm run build && changeset publish"
	},
	"devDependencies": {
		"@changesets/cli": "^2.29.8",
		"@robino/prettier": "^2.0.2",
		"@robino/tsconfig": "^1.1.0",
		"prettier": "^3.7.4",
		"prettier-plugin-tailwindcss": "^0.7.2",
		"turbo": "^2.6.3",
		"typescript": "^5.9.3",
		"vitest": "^4.0.15"
	}
}
